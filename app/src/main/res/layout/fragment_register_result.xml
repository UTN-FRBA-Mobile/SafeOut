<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="8dp"
    android:layout_margin="15dp"
    android:padding="15dp"
    android:layout_centerInParent="true"
    app:layout_constraintCircleRadius="@dimen/material_emphasis_disabled">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.CheckInResultFragment"
    style="@style/common_block_vertical">

    <LinearLayout style="@style/dialog_container">

        <LinearLayout
            android:id="@android:id/content"
            style="@style/common_block_vertical"
            tools:visibility="visible">

            <TextView
                android:id="@+id/registerTitle"
                style="@style/text_headline"
                android:gravity="center_horizontal"
                android:textColor="@color/success_color"
              />

            <ImageView
                android:id="@+id/checkImage"
                style="@style/dialog_icon"
                android:scaleType="fitCenter" />

            <!--TextView
                android:id="@+id/scannedData"
                style="@style/text_headline"
                android:gravity="center_horizontal"
                android:textColor="@color/success_color"
                /-->
            <TextView
                android:id="@+id/textRegisterResult"
                style="@style/dialog_title"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimary"
                 />

            <!--TextView
                android:id="@+id/occupation"
                style="@style/dialog_title"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimary"
                /-->

            <!--TextView
                android:id="@+id/sectionName"
                style="@style/dialog_title"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimary"
                /-->

            <!--TextView
                android:id="@+id/sectionOccupation"
                style="@style/dialog_title"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimary"
                /-->

            <!--ImageView
                android:id="@+id/placeImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/-->
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@android:id/button1"
        style="@style/button_container">

        <Button
            android:id="@+id/buttonRetry"
            style="@style/button_container_bottom"
            android:text="Reintentar" />
    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>