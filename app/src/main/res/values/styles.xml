<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

        <style name="tab_layout_text" parent="TextAppearance.AppCompat.Button">
            <item name="android:textColor">@color/activity_background_dim</item>
        </style>

        <style name="ToolbarHeadlineAppearance" parent="text_headline">
            <item name="android:textColor">@color/activity_background</item>
            <item name="android:layout_marginBottom">@dimen/sizeXXXS</item>
        </style>
        <!-- Common layout helpers -->

        <style name="common_block_vertical">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:orientation">vertical</item>
        </style>

        <style name="common_block_horizontal">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:orientation">horizontal</item>
        </style>

        <style name="common_inline_vertical">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:orientation">vertical</item>
        </style>

        <style name="common_inline_horizontal">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:orientation">horizontal</item>
        </style>

        <style name="activity_default" parent="common_block_vertical">
            <item name="android:layout_height">match_parent</item>
            <item name="android:background">@color/activity_background</item>
        </style>

        <style name="common_container" parent="common_block_vertical">
            <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
            <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
            <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
            <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
            <item name="android:clipToPadding">false</item>
        </style>

        <style name="common_container_dim" parent="common_container">
            <item name="android:background">@color/activity_background_dim</item>
        </style>

        <style name="common_container_toolbar" parent="common_container">
            <item name="android:background">@color/toolbar_background</item>
            <!--<item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>-->
        </style>

        <style name="common_container_intro" parent="common_container_dim">
            <item name="android:background">@color/activity_intro_background</item>
        </style>

        <!-- Typography -->

        <style name="text_caption" parent="text_title">
            <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
            <item name="android:textColor">@color/secondary_text</item>
            <item name="android:textStyle">normal</item>
            <item name="android:textSize">@dimen/txtXXS</item>
        </style>

        <style name="text_body" parent="common_block_horizontal">
            <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
            <item name="android:textColor">@color/primary_text</item>
            <item name="android:lineSpacingMultiplier">1.2</item>
        </style>

        <style name="text_title" parent="text_body">
            <item name="android:textSize">@dimen/txtM</item>
            <item name="android:lineSpacingMultiplier">1.1</item>
            <item name="android:textStyle">bold</item>
        </style>

        <style name="text_subtitle" parent="text_body">
            <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
            <item name="android:textSize">@dimen/txtS</item>
            <item name="android:lineSpacingMultiplier">1.1</item>
        </style>

        <style name="text_headline" parent="text_title">
            <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
            <item name="android:textSize">@dimen/txtL</item>
            <item name="android:lineSpacingMultiplier">1</item>
            <item name="android:lineSpacingExtra">0dp</item>
        </style>

        <style name="text_display1" parent="text_headline">
            <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
            <item name="android:textSize">@dimen/txtXL</item>
        </style>

        <!-- Buttons -->
        <style name="button" parent="Widget.AppCompat.Button.Colored"><!--Widget.AppCompat.Button.Small-->
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:lines">1</item>
            <item name="android:maxLines">1</item>
            <item name="android:singleLine">true</item>
            <item name="android:ellipsize">middle</item>
            <item name="android:textColor">@color/button_borderless_inverse_text</item>
            <item name="android:background">@drawable/ic_launcher_background</item><!--btn_primary-->
        </style>

        <style name="button_secondary" parent="Widget.AppCompat.Button.Borderless">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textColor">@color/button_borderless_primary_text</item>
            <item name="android:textAllCaps">false</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textSize">@dimen/txtS</item>
        </style>

        <style name="button_secondary_accent" parent="button_secondary">
            <item name="android:textColor">@color/primary</item>
            <item name="android:tint">@color/colorWhite</item>
        </style>

        <style name="button_secondary_muted" parent="button_secondary">
            <item name="android:textColor">@color/secondary_text</item>
            <item name="android:tint">@color/secondary_text</item>
        </style>

        <style name="button_secondary_inverse" parent="button_secondary">
            <item name="android:textColor">@color/button_borderless_inverse_text</item>
        </style>

        <style name="button_container" parent="common_block_vertical">
            <!-- All padding values add up to 16dp with button drawable's inset values -->
            <item name="android:paddingTop">@dimen/sizeXS</item>
            <item name="android:paddingBottom">@dimen/sizeXS</item>
            <item name="android:paddingLeft">@dimen/sizeS</item>
            <item name="android:paddingRight">@dimen/sizeS</item>
            <item name="android:gravity">center</item>
            <item name="android:clipChildren">false</item>
            <item name="android:clipToPadding">false</item>
        </style>

        <style name="button_container_bottom" parent="common_block_horizontal">
            <item name="android:layout_alignParentBottom">true</item>
            <item name="android:gravity">center</item>
            <item name="android:background">@color/colorPrimary</item>
        </style>

        <style name="button_container_bottom_button" parent="button_secondary_inverse">
            <item name="android:layout_width">0dp</item>
            <item name="android:layout_weight">1</item>
            <item name="android:padding">0dp</item>
        </style>

        <!-- Dialog -->

        <style name="dialog_container" parent="common_block_vertical">
            <item name="android:paddingTop">@dimen/dialog_vertical_padding</item>
            <item name="android:paddingRight">@dimen/dialog_horizontal_padding</item>
            <item name="android:paddingBottom">@dimen/dialog_vertical_padding</item>
            <item name="android:paddingLeft">@dimen/dialog_horizontal_padding</item>
        </style>

        <style name="dialog_title" parent="common_block_horizontal">
            <item name="android:layout_marginBottom">@dimen/sizeS</item>
            <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
            <item name="android:textSize">@dimen/txtM</item>
            <item name="android:lineSpacingMultiplier">1</item>
            <item name="android:lineSpacingExtra">0dp</item>
        </style>

        <style name="dialog_icon" parent="common_block_horizontal">
            <item name="android:layout_marginTop">@dimen/sizeXS</item>
            <item name="android:layout_marginBottom">@dimen/sizeXS</item>
            <item name="android:maxHeight">@dimen/dialog_icon</item>
            <item name="android:adjustViewBounds">true</item>
            <item name="android:scaleType">centerInside</item>
            <item name="android:gravity">center</item>
            <item name="android:layout_gravity">center</item>
        </style>

        <style name="dialog_icon_small" parent="dialog_icon">
            <item name="android:maxHeight">@dimen/dialog_icon_small</item>
        </style>

        <style name="dialog_icon_medium" parent="dialog_icon">
            <item name="android:maxHeight">@dimen/dialog_icon_medium</item>
        </style>

        <style name="dialog_icon_large" parent="dialog_icon">
            <item name="android:maxHeight">@dimen/dialog_icon_large</item>
        </style>

        <style name="dialog_body_title" parent="common_block_horizontal">
            <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
            <item name="android:lineSpacingMultiplier">1.2</item>
        </style>

        <style name="dialog_body" parent="text_body">
            <item name="android:layout_marginTop">@dimen/sizeXXS</item>
            <item name="android:layout_marginBottom">@dimen/sizeXXS</item>
            <item name="android:textColor">@color/secondary_text</item>
        </style>

        <style name="dialog_footnote" parent="common_block_horizontal">
            <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
            <item name="android:textColor">@color/secondary_text</item>
        </style>

        <style name="dialog_button_container" parent="button_container">
            <item name="android:orientation">horizontal</item>
            <item name="android:gravity">right|center_vertical</item>
        </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorLightGrey</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="SplashScreenTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>


<style name="Theme.App.Dialog.FullScreen" parent="Theme.AppCompat.Light">
    <item name="android:windowBackground">@color/activity_background</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowFrame">@null</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowAnimationStyle">@null</item>
    <item name="android:backgroundDimEnabled">false</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowNoTitle">false</item>
</style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>
